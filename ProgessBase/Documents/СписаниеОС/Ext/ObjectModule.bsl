			Движение.ДатаСостояния		  = ДатаДока;
		КонецЕсли;	
		//конец изменений

		Если НЕ СтрокаТЧ.СписаноНаЗатраты Тогда

			// Движения по регистру СтоимостьОС
			Движение = ТаблицаДвиженийАмортизация.Добавить();

			Движение.ОсновноеСредство = ТекОС;
