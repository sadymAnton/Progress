					НоваяСтрока.СчетУчетаРасчетов = СчетаУчета.СчетРасчетовПокупателя;
					НоваяСтрока.СчетУчетаАвансов  = СчетаУчета.СчетАвансовПокупателя;
				ИначеЕсли НоваяСтрока.ДоговорКонтрагента.ВидДоговора = Перечисления.ВидыДоговоровКонтрагентов.СКомитентом Тогда
					НоваяСтрока.СчетУчетаРасчетов = СчетаУчета.СчетРасчетовСКомитентом;
					НоваяСтрока.СчетУчетаАвансов  = СчетаУчета.СчетАвансов;
				Иначе
					НоваяСтрока.СчетУчетаРасчетов = СчетаУчета.СчетРасчетовПокупателя;
					НоваяСтрока.СчетУчетаАвансов  = СчетаУчета.СчетАвансовПокупателя;
				КонецЕсли;
				
				СчетДт = ПланыСчетов.Хозрасчетный.ПрочиеРасходыНеОблагаемыеЕНВД;
				СчетДтНУ = ПланыСчетов.Налоговый.ВнереализационныеРасходы;
								
			КонецЕсли;
			
			НоваяСтрока.Сумма 		= ДокументОснование.Товары.Итог("Сумма") + ?(ДокументОснование.СуммаВключаетНДС,0,ДокументОснование.Товары.Итог("СуммаНДС"));
			НоваяСтрока.СуммаНУ 	= НоваяСтрока.Сумма;
			НоваяСтрока.СуммаРегл 	= НоваяСтрока.Сумма;
					
		КонецЕсли;
		
		Комментарий = Основание.Комментарий; // Шевченков 37895
		
  	ИначеЕсли ТипЗнч(Основание) = Тип("ДокументСсылка.СписаниеТоваров") Тогда
		
		ДокументОснование = Основание;
		
		//Если ТипЗнч(ДокументОснование.ДокументОснование) = Тип("ДокументСсылка.ПР_Претензия") Тогда
		//
		//	КонтрагентДебитор = ДокументОснование.ДокументОснование.ТЭК;
