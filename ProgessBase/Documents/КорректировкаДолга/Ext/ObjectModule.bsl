			ДоговорКонтрагента = НоваяСтрока.ДоговорКонтрагента;
			
			СтруктураКурса = МодульВалютногоУчета.ПолучитьКурсВалюты(НоваяСтрока.ДоговорКонтрагента.ВалютаВзаиморасчетов, Дата);
