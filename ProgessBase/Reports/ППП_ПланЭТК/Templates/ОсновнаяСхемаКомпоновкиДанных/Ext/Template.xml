		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ РАЗРЕШЕННЫЕ
	ППП_ПланЭТК.Дивизион,
	ППП_ПланЭТК.КатегорияКлиента,
	ППП_ПланЭТК.ВидПоказателя,
	ППП_ПланЭТК.Показатель,
	ППП_ПланЭТК.Месяц,
	ППП_ПланЭТК.Группа
ИЗ
	РегистрСведений.ППП_ПланЭТК.СрезПоследних({(ДАТАВРЕМЯ(3999, 12, 31, 23, 59, 59)) КАК Поле2}, ) КАК ППП_ПланЭТК
ГДЕ
	(ППП_ПланЭТК.Месяц &lt;= &amp;КонецПериода
			ИЛИ &amp;КонецПериода = ДАТАВРЕМЯ(1, 1, 1))
	И (ППП_ПланЭТК.Месяц &gt;= &amp;НачалоПериода
			ИЛИ &amp;НачалоПериода = ДАТАВРЕМЯ(1, 1, 1))</query>
	</dataSet>
