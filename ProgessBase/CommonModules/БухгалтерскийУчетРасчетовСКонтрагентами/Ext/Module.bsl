// Шевченков


Процедура ЗаполнитьПретензииВТаблицеПроводок(мСсылка, ТаблицаПлатежей)
	
	мСписокТипов = Новый Массив;
	мСписокТипов.Добавить(Тип("ДокументСсылка.ПлатежноеПоручениеИсходящее"));
	мСписокТипов.Добавить(Тип("ДокументСсылка.ПлатежноеПоручениеВходящее"));
	
	Если мСписокТипов.Найти(ТипЗнч(мСсылка)) = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ТаблицаДокумента.Ссылка,
		|	ТаблицаДокумента.НомерСтроки КАК НомерСтроки,
		|	ТаблицаДокумента.ПРГ_Претензия КАК Претензия
		|ИЗ
		|	Документ.ПлатежноеПоручениеИсходящее.РасшифровкаПлатежа КАК ТаблицаДокумента
		|ГДЕ
		|	ТаблицаДокумента.Ссылка = &Ссылка
		|	И НЕ ТаблицаДокумента.ПРГ_Претензия = ЗНАЧЕНИЕ(Справочник.ПРГ_Претензии.ПустаяСсылка)
		|
		|УПОРЯДОЧИТЬ ПО
		|	НомерСтроки";

	Запрос.УстановитьПараметр("Ссылка", мСсылка);
	
	Если ТипЗнч(мСсылка) = Тип("ДокументСсылка.ПлатежноеПоручениеВходящее") Тогда
		
		Запрос.Текст = СтрЗаменить(Запрос.Текст, "ПлатежноеПоручениеИсходящее", "ПлатежноеПоручениеВходящее");
		Запрос.Текст = СтрЗаменить(Запрос.Текст, "ПРГ_Претензия", "Претензия");
		
	КонецЕсли;	
	
	Результат = Запрос.Выполнить();

	ВыборкаДетальныеЗаписи = Результат.Выбрать();

	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		ТаблицаПлатежей[ВыборкаДетальныеЗаписи.НомерСтроки - 1].Претензия = ВыборкаДетальныеЗаписи.Претензия;
	КонецЦикла;
	
КонецПроцедуры
