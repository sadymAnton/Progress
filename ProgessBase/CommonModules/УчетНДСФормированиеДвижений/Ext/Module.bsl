			ДокументРеализации = СписокДокументовРеализации[НоомерЭлемента - 1];
				
			СтрокаРегистратора = СтруктураПараметров.ДеревоРасходныхОрдеров.Строки.Найти(ДокументРеализации,"Регистратор");
