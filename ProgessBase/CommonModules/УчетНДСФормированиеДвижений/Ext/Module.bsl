				Дельта = Окр(НДС - СтрокаРеестра.Базис_НДС - СтрокаРеестра.СР_НДС, 2, 1);
				
				Если Макс(Дельта, -Дельта) = 0.01 Тогда
					СтрокаРеестра.СР_НДС = СтрокаРеестра.СР_НДС + Дельта;
				КонецЕсли;
			КонецЦикла;
			
		КонецЕсли;
		
	КонецЕсли;
	
