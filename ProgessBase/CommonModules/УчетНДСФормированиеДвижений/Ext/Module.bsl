//Предназначена для распределения дублирующихся в исходной таблице суммарных показателей по базе показателей распределения
//	Параметры:
//		Таблица - Таблица значений
//		СтрокаКлючей - Сторка, строка ключей (имен колонок таблицы), в разрезе которых необходимо получить суммы показателей базы распределения
//		СоответствиеРаспределяемыхПоказателейИПоказателейБазы - Соответствие, соответствие параметров (имен колонок) базы распределения -Ключ и распределяемых параметров - Значение
//
//  В исходной таблице должно присутствовать поле "Распределять", управляющее участием строки в распределении
//
Процедура РаспределитьСуммыКорректировокПоОстаткамПартий(Таблица,СтрокаКлючей,СоответствиеРаспределяемыхПоказателейИПоказателейБазы)
	
	ТаблицаСуммПоказателейБазы = Таблица.Скопировать();
	
	СтрокаРаспределяемыхПоказателей = "";
	Для Каждого ЭлементСоответствия Из СоответствиеРаспределяемыхПоказателейИПоказателейБазы Цикл
		СтрокаРаспределяемыхПоказателей = СтрокаРаспределяемыхПоказателей + ЭлементСоответствия.Значение + ",";	
	КонецЦикла;
	СтрокаРаспределяемыхПоказателей = Лев(СтрокаРаспределяемыхПоказателей,СтрДлина(СтрокаРаспределяемыхПоказателей) - 1);
	
	СтрокаПоказателейБазыРаспределения = "";
	Для Каждого ЭлементСоответствия Из СоответствиеРаспределяемыхПоказателейИПоказателейБазы Цикл
		СтрокаПоказателейБазыРаспределения = СтрокаПоказателейБазыРаспределения + ЭлементСоответствия.Ключ + ",";	
	КонецЦикла;
	СтрокаПоказателейБазыРаспределения = Лев(СтрокаПоказателейБазыРаспределения,СтрДлина(СтрокаПоказателейБазыРаспределения) - 1);
		
	ТаблицаСуммПоказателейБазы.Свернуть(СтрокаКлючей,СтрокаПоказателейБазыРаспределения);
	
	СтруктураПоискаСтрок = Новый Структура(СтрокаКлючей);
	СтруктураРаспределенныхПоказателей = Новый Структура(СтрокаРаспределяемыхПоказателей);
	
	Для Каждого СтрокаСуммы Из ТаблицаСуммПоказателейБазы Цикл
		
		ЗаполнитьЗначенияСвойств(СтруктураПоискаСтрок,СтрокаСуммы);
		СтрокиДвижений = Таблица.НайтиСтроки(СтруктураПоискаСтрок);
		
		КоличествоСтрокКРаспределению = СтрокиДвижений.Количество();
		Если КоличествоСтрокКРаспределению < 2 Тогда
			Продолжить;
		КонецЕсли;
		
		Для Инд = 0 По КоличествоСтрокКРаспределению - 1 Цикл
			
			СтрокаДвижений = СтрокиДвижений[Инд];
			Если НЕ СтрокаДвижений.Распределять Тогда
				Продолжить;
			КонецЕсли;	
			Если Инд = 0 Тогда
				ЗаполнитьЗначенияСвойств(СтруктураРаспределенныхПоказателей,СтрокаДвижений); 
			КонецЕсли;				
			Если Инд = КоличествоСтрокКРаспределению - 1 Тогда
				ЗаполнитьЗначенияСвойств(СтрокаДвижений,СтруктураРаспределенныхПоказателей,СтрокаРаспределяемыхПоказателей);
				Прервать;
			КонецЕсли;	
			Для Каждого КлючИЗначение Из СоответствиеРаспределяемыхПоказателейИПоказателейБазы Цикл
				Если СтрокаСуммы[КлючИЗначение.Ключ] <> 0 Тогда
					СтрокаДвижений[КлючИЗначение.Значение] = Окр(СтрокаДвижений[КлючИЗначение.Значение] * СтрокаДвижений[КлючИЗначение.Ключ] / СтрокаСуммы[КлючИЗначение.Ключ],2);
					СтруктураРаспределенныхПоказателей[КлючИЗначение.Значение] = СтруктураРаспределенныхПоказателей[КлючИЗначение.Значение] - СтрокаДвижений[КлючИЗначение.Значение];
				КонецЕсли;	
			КонецЦикла;	
			
		КонецЦикла;	
		
	КонецЦикла;		
	
КонецПроцедуры

Процедура СформироватьДвиженияНДСНомераДокументовОплаты(Ссылка, Отказ) Экспорт
	
	СтруктураПараметров = Общегоназначения.ПолучитьЗначенияРеквизитов(Ссылка,Новый Структура("Ссылка,Период,ДокументОснование,ВидСчетаФактуры,Исправление,ДоговорКонтрагента",,"Дата",));
	ТаблицаДвижений = Документы.СчетФактураВыданный.СформироватьТаблицуНомеровДокументовОплаты(СтруктураПараметров);
	
	Если ТаблицаДвижений = Неопределено ИЛИ ТаблицаДвижений.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Если СтруктураПараметров.Исправление И 
		(СтруктураПараметров.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыВыставленного.НаАванс
			ИЛИ СтруктураПараметров.ВидСчетаФактуры = Перечисления.ВидСчетаФактурыВыставленного.НалоговыйАгент) Тогда
			
		Возврат;
		
	Иначе
		
		ДвиженияНДСЗаписиКнигиПродаж = РегистрыНакопления.НДСЗаписиКнигиПродаж.СоздатьНаборЗаписей();
		ДвиженияНДСЗаписиКнигиПродаж.Отбор.Регистратор.Установить(Ссылка);
		
		Для каждого СтрокаТаблицы Из ТаблицаДвижений Цикл
			
			Запись = ДвиженияНДСЗаписиКнигиПродаж.Добавить();
			ЗаполнитьЗначенияСвойств(Запись, СтрокаТаблицы);
			
		КонецЦикла;
		
	КонецЕсли;
	
	ДвиженияНДСЗаписиКнигиПродаж.Записать();

КонецПроцедуры


Функция ВернутьКорректировкуПоТаре(мДок, мТекСумма)
	
	Если ЗначениеЗаполнено(мДок) И ТипЗнч(мДок) = Тип("ДокументСсылка.ПоступлениеТоваровУслуг") И мДок.Товары.Количество() > 0 И мДок.ВозвратнаяТара.Количество() > 0 Тогда
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	СУММА(НДСПредъявленный.СуммаБезНДСОборот) КАК СуммаБезНДС,
		|	СУММА(НДСПредъявленный.НДСОборот) КАК НДС,
		|	СУММА(НДСПредъявленный.СуммаБезНДСОборот + НДСПредъявленный.НДСОборот) КАК СуммаОбщая,
		|	НДСПредъявленный.Регистратор
		|ИЗ
		|	РегистрНакопления.НДСПредъявленный.Обороты(, , Регистратор, ) КАК НДСПредъявленный
		|ГДЕ
		|	НДСПредъявленный.Регистратор = &мДок
		|
		|СГРУППИРОВАТЬ ПО
		|	НДСПредъявленный.Регистратор";
		
		Запрос.УстановитьПараметр("мДок", мДок);
		
		Результат = Запрос.Выполнить();
		
		ВыборкаДетальныеЗаписи = Результат.Выбрать();
		
		Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
			Если ВыборкаДетальныеЗаписи.СуммаОбщая = мТекСумма Тогда
				Возврат 0;
			Иначе
				Возврат ВыборкаДетальныеЗаписи.СуммаОбщая - мТекСумма;
			КонецЕсли;
		КонецЦикла;
		
		Возврат 0;		
		
	Иначе
		
		Возврат 0;
		
	КонецЕсли;		
	
КонецФункции

