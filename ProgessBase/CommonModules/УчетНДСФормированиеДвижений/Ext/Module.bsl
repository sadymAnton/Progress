	ТаблицуНДССУчетомПропорции = Запрос.Выполнить().Выгрузить();
	
	КорректировкаПоступленияСкорректироватьНДСВключенныйВСтоимостьПоПроводкам(СтруктураШапкиДокумента, ТаблицаДокумента, ТаблицуНДССУчетомПропорции, Движения);
	
	Возврат ТаблицуНДССУчетомПропорции;
		
КонецФункции	

// Процедура выполняет сопоставляет суммы НДС, включенного в стоимость по проводкам и по регистрам, 
// чтобы не возникало отличие из-за округления.
//
Процедура КорректировкаПоступленияСкорректироватьНДСВключенныйВСтоимостьПоПроводкам(СтруктураШапкиДокумента, ТаблицаДокумента, ТаблицуНДССУчетомПропорции, Движения)

	Если НЕ СтруктураШапкиДокумента.КорректироватьБУиНУ Тогда
		Возврат;
	КонецЕсли;

	// Определим общую сумму НДС на субсчетах 19-ого по проводкам.
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Ссылка", СтруктураШапкиДокумента.Ссылка);
	
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Хозрасчетный.Ссылка
	|ПОМЕСТИТЬ ВТ_Субсчета19
	|ИЗ
	|	ПланСчетов.Хозрасчетный КАК Хозрасчетный
	|ГДЕ
	|	Хозрасчетный.Ссылка В ИЕРАРХИИ(ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.НДСпоПриобретеннымЦенностям))
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Хозрасчетный.Ссылка
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ВЫБОР
	|		КОГДА НЕ Субсчет19ПоДт.Ссылка ЕСТЬ NULL 
	|			ТОГДА Хозрасчетный.СчетДт
	|		КОГДА НЕ Субсчет19ПоКт.Ссылка ЕСТЬ NULL 
	|			ТОГДА Хозрасчетный.СчетКт
	|		ИНАЧЕ НЕОПРЕДЕЛЕНО
	|	КОНЕЦ КАК СчетУчетаНДС,
	|	СУММА(ВЫБОР
	|			КОГДА НЕ Субсчет19ПоДт.Ссылка ЕСТЬ NULL 
	|					И Хозрасчетный.СчетКт <> ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.НДС)
	|				ТОГДА Хозрасчетный.Сумма
	|			ИНАЧЕ 0
	|		КОНЕЦ) КАК СуммаОборотДт,
	|	СУММА(ВЫБОР
	|			КОГДА НЕ Субсчет19ПоКт.Ссылка ЕСТЬ NULL 
	|				ТОГДА Хозрасчетный.Сумма
	|			ИНАЧЕ 0
	|		КОНЕЦ) КАК СуммаОборотКт
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный КАК Хозрасчетный
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_Субсчета19 КАК Субсчет19ПоДт
	|		ПО Хозрасчетный.СчетДт = Субсчет19ПоДт.Ссылка
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТ_Субсчета19 КАК Субсчет19ПоКт
	|		ПО Хозрасчетный.СчетКт = Субсчет19ПоКт.Ссылка
	|ГДЕ
	|	Хозрасчетный.Регистратор = &Ссылка
	|	И Хозрасчетный.ВидРегламентнойОперации <> ЗНАЧЕНИЕ(Перечисление.ВидыРегламентныхОпераций.ПроведениеДокументовПоНДС)
	|	И (НЕ Субсчет19ПоДт.Ссылка ЕСТЬ NULL 
	|			ИЛИ НЕ Субсчет19ПоКт.Ссылка ЕСТЬ NULL )
	|
	|СГРУППИРОВАТЬ ПО
	|	ВЫБОР
	|		КОГДА НЕ Субсчет19ПоДт.Ссылка ЕСТЬ NULL 
	|			ТОГДА Хозрасчетный.СчетДт
	|		КОГДА НЕ Субсчет19ПоКт.Ссылка ЕСТЬ NULL 
	|			ТОГДА Хозрасчетный.СчетКт
	|		ИНАЧЕ НЕОПРЕДЕЛЕНО
	|	КОНЕЦ";

	ТаблицаСуммыНДС = Запрос.Выполнить().Выгрузить();
	
	// Определим суммы НДС в регистрах после проведения.
	ОписаниеТиповЧисло15_2 = Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(15, 2));
	
	ТаблицаСуммыНДС.Колонки.Добавить("НДСПредъявленный", 		ОписаниеТиповЧисло15_2);
	ТаблицаСуммыНДС.Колонки.Добавить("НДСВключенныйВСтоимость", ОписаниеТиповЧисло15_2);
	
	ТаблицуНДССУчетомПропорции.Индексы.Добавить("СчетУчетаНДС");
	ТаблицаДокумента.Индексы.Добавить("СчетУчетаНДС");
	СтруктураПоиска = Новый Структура("СчетУчетаНДС");
	ЕстьНДСВключаемыйВСтоимость = Ложь;
	
	Если Движения.Свойство("НДСПредъявленный") Тогда
		НаборЗаписей = Движения.НДСПредъявленный;
		Для Каждого ЗаписьНабора Из НаборЗаписей Цикл
			НоваяСтрока = ТаблицаСуммыНДС.Добавить();
			НоваяСтрока.СчетУчетаНДС = ЗаписьНабора.СчетУчетаНДС;
			Если ЗаписьНабора.ВидДвижения = ВидДвиженияНакопления.Приход Тогда
				НоваяСтрока.НДСПредъявленный = ЗаписьНабора.НДС;
			Иначе
				НоваяСтрока.НДСПредъявленный = - ЗаписьНабора.НДС;
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	// Суммы отсторнированные из книги покупок, если ранее НДС уже был принят к вычету,
	// не отражаются как расход в НДСПредъявленный.
	Если Движения.Свойство("НДСЗаписиКнигиПокупок") Тогда
		НаборЗаписей = Движения.НДСЗаписиКнигиПокупок;
		Для Каждого ЗаписьНабора Из НаборЗаписей Цикл
			НоваяСтрока = ТаблицаСуммыНДС.Добавить();
			НоваяСтрока.СчетУчетаНДС 		= ЗаписьНабора.СчетУчетаНДС;
			НоваяСтрока.НДСПредъявленный 	= ЗаписьНабора.НДС;   // т.к. сумма сторнируется, то нее знак "-"
		КонецЦикла; 
	КонецЕсли;
	
	Для Каждого СтрокаТаблицы Из ТаблицаДокумента Цикл
		НоваяСтрока = ТаблицаСуммыНДС.Добавить();
		НоваяСтрока.СчетУчетаНДС	 = СтрокаТаблицы.СчетУчетаНДС;
		НоваяСтрока.НДСПредъявленный = СтрокаТаблицы.НДС;
	КонецЦикла;
	
	Для Каждого СтрокаТаблицы Из ТаблицуНДССУчетомПропорции Цикл
		НоваяСтрока = ТаблицаСуммыНДС.Добавить();
		НоваяСтрока.СчетУчетаНДС = СтрокаТаблицы.СчетУчетаНДС;
		НоваяСтрока.НДСВключенныйВСтоимость = СтрокаТаблицы.НДС;
		
		Если СтрокаТаблицы.НДС <> 0 Тогда
			ЕстьНДСВключаемыйВСтоимость = Истина;
		КонецЕсли;
	КонецЦикла;
	
	ТаблицаСуммыНДС.Свернуть("СчетУчетаНДС", "СуммаОборотДт, СуммаОборотКт, НДСПредъявленный, НДСВключенныйВСтоимость");
	Для Каждого СтрокаТаблицы Из ТаблицаСуммыНДС Цикл
		Разница  = (СтрокаТаблицы.СуммаОборотДт - СтрокаТаблицы.СуммаОборотКт) - (СтрокаТаблицы.НДСПредъявленный - СтрокаТаблицы.НДСВключенныйВСтоимость);
		Если Разница <> 0 И Разница > -1 И Разница < 1 Тогда
			// По счету учета НДС возникает разница из-за округления между НДСПредъявленный и Хозрасчетным, 
			// уменьшим на нее, добавив ее к тем суммам, которые включаем в стоимость. Если сумм НДС для включения
			// в стоимость нет, то корректируем основную таблицу документа.
			
			СтруктураПоиска.СчетУчетаНДС = СтрокаТаблицы.СчетУчетаНДС;
			Если ЕстьНДСВключаемыйВСтоимость Тогда
				НайденныеСтроки = ТаблицуНДССУчетомПропорции.НайтиСтроки(СтруктураПоиска);
				Разница = - Разница;
			Иначе
				НайденныеСтроки = ТаблицаДокумента.НайтиСтроки(СтруктураПоиска);
			КонецЕсли;
			
			МассивРаспределения = Новый Массив;
			Для Каждого НайденнаяСтрока Из НайденныеСтроки Цикл
				МассивРаспределения.Добавить(НайденнаяСтрока.НДС);
			КонецЦикла;
			
			МассивРаспределения = ОбщегоНазначения.РаспределитьПропорционально(Разница, МассивРаспределения);
			Если МассивРаспределения <> Неопределено Тогда
				ВГраницаМассива = МассивРаспределения.ВГраница();
				Для Инд = 0 По ВГраницаМассива Цикл
					НайденнаяСтрока = НайденныеСтроки[Инд];
					НайденнаяСтрока.НДС = НайденнаяСтрока.НДС + МассивРаспределения[Инд];
					
					Если НайденнаяСтрока.СуммаБезНДС <> 0 Тогда
						ПроцентНДС = УчетНДС.ПолучитьСтавкуНДС(НайденнаяСтрока.СтавкаНДС);
						
						Если ПроцентНДС <> 0 Тогда
							НайденнаяСтрока.СуммаБезНДС = Окр(НайденнаяСтрока.НДС * 100 / ПроцентНДС, 2)
						Иначе
							НайденнаяСтрока.СуммаБезНДС = 0;
						КонецЕсли;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;

КонецПроцедуры

Функция КорректировкаПоступленияПодготовитьТаблицуКоэффициентов(СтруктураШапкиДокумента) Экспорт
		
	Запрос = Новый Запрос();
	Запрос.УстановитьПараметр("ИсправляемыйДокумент", УчетНДС.ПолучитьИсправляемыйДокументПоступления(СтруктураШапкиДокумента.ДокументПоступления, Истина));
	Запрос.УстановитьПараметр("Организация", СтруктураШапкиДокумента.Организация);
	Запрос.УстановитьПараметр("Ссылка", СтруктураШапкиДокумента.Ссылка);
	Запрос.УстановитьПараметр("Дата", СтруктураШапкиДокумента.Дата);

	Запрос.Текст = 
	"ВЫБРАТЬ
	|	НДСПредъявленный.СтавкаНДС,
	|	НДСПредъявленный.ВидЦенности,
	|	НДСПредъявленный.СчетУчетаНДС,
	|	НДСПредъявленный.ИсправленныйСчетФактура,
	|	СУММА(ВЫБОР
	|			КОГДА НДСПредъявленный.Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПоНДСПокупки.НДСВключенВСтоимость)
	|					И НДСПредъявленный.ВидДвижения = ЗНАЧЕНИЕ(ВидДвиженияНакопления.Расход)
	|				ТОГДА НДСПредъявленный.НДС
	|			ИНАЧЕ 0
	|		КОНЕЦ) КАК НДСВключенный,
	|	СУММА(ВЫБОР
	|			КОГДА НДСПредъявленный.ВидДвижения = ЗНАЧЕНИЕ(ВидДвиженияНакопления.Приход)
	|				ТОГДА НДСПредъявленный.НДС
	|			ИНАЧЕ 0
	|		КОНЕЦ) КАК НДСПредъявленный,
	|	МИНИМУМ(НДСПредъявленный.Период) КАК ПериодДвижения
	|ИЗ
	|	РегистрНакопления.НДСПредъявленный КАК НДСПредъявленный
	|ГДЕ
	|	НДСПредъявленный.Организация = &Организация
	|	И НДСПредъявленный.СчетФактура = &ИсправляемыйДокумент
	|	И НДСПредъявленный.Регистратор <> &Ссылка
	|	И НДСПредъявленный.Период < &Дата
	|
	|СГРУППИРОВАТЬ ПО
	|	НДСПредъявленный.СтавкаНДС,
	|	НДСПредъявленный.ВидЦенности,
	|	НДСПредъявленный.СчетУчетаНДС,
	|	НДСПредъявленный.ИсправленныйСчетФактура
	|
	|УПОРЯДОЧИТЬ ПО
	|	СтавкаНДС,
	|	ВидЦенности,
	|	СчетУчетаНДС,
	|	ПериодДвижения УБЫВ
	|"; 
	
	РезультатЗапроса = Запрос.Выполнить();
	Выборка = РезультатЗапроса.Выбрать();
	
	ОписаниеТиповЧисло12_10 = Новый ОписаниеТипов("Число", Новый КвалификаторыЧисла(12, 10));
	
	// Определяем коэффициент по последней по дате корректировке
	ТаблицаКоэффициентов = Новый ТаблицаЗначений;
	ТаблицаКоэффициентов.Колонки.Добавить("СтавкаНДС", Новый ОписаниеТипов("ПеречислениеСсылка.СтавкиНДС"));
