	СтруктураСчетовУчета.Вставить("ПустойСчетБУ",								ПланыСчетов.Хозрасчетный.ПустаяСсылка());
	СтруктураСчетовУчета.Вставить("ПустойСчетНУ",								ПланыСчетов.Налоговый.ПустаяСсылка());
