		<field xsi:type="DataSetFieldField">
			<dataPath>ХарактерЗатрат</dataPath>
			<field>ХарактерЗатрат</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>СтатьяЗатрат</dataPath>
